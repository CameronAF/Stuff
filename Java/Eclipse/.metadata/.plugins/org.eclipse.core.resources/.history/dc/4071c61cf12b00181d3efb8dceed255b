package q5_3;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import javax.swing.*;

/**
 * 
 * @author Cameron Anzola
 * @class COP5339 001
 * @data 3/19/2018
 */
public class Window {

	public static void main(String[] args) {
		final JFrame frame = new JFrame();
        frame.setTitle("Test vertical alignement");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        // first panel
        JPanel panel1 = new JPanel();
        panel1.setLayout(new BoxLayout(panel1, BoxLayout.Y_AXIS));
        JTextField textField1 = new JTextField("100");
        JTextField textField2 = new JTextField("70");
        JTextField textField3 = new JTextField("40");
        panel1.add(textField1);
        panel1.add(textField2);
        panel1.add(textField3);
        
        // second panel
        JPanel panel2 = new JPanel();
        panel2.setLayout(new BoxLayout(panel2, BoxLayout.Y_AXIS));
        //GridBagConstraints gbc = new GridBagConstraints();
        //panel1.add(label1, gbc);
        //panel2.add(label2, gbc);
        //Rectangle icon = new Rectangle(50, Color.RED);
        //JLabel label = new JLabel(new Rectangle(50, Color.RED));
		//label.setIcon(icon);
        panel2.add(new JLabel(new Rectangle(50, Color.RED)));
        panel2.add(new JLabel(new Rectangle(50, Color.BLUE)));
        panel2.add(new JLabel(new Rectangle(50, Color.GREEN)));
        frame.add(panel1, BorderLayout.WEST);
        frame.add(panel2, BorderLayout.EAST);
        frame.setSize(300, 300);
        frame.setVisible(true);
	}

}
